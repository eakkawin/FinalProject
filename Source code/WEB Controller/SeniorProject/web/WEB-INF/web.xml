    <servlet>
        <servlet-name>ManageServlet</servlet-name>
        <servlet-class>controller.ManageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RoomServlet</servlet-name>
        <servlet-class>controller.RoomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TurningServlet</servlet-name>
        <servlet-class>controller.TurningServlet</servlet-class>
    </servlet>
    <servlet>
