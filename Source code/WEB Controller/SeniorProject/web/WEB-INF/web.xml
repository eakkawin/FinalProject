    <servlet>
        <servlet-name>TimerServlet</servlet-name>
        <servlet-class>controller.TimerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AboutServlet</servlet-name>
        <servlet-class>controller.AboutServlet</servlet-class>
    </servlet>
